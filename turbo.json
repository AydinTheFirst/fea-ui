{
  "$schema": "https://turborepo.com/schema.json",

  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "start": {
      "dependsOn": ["^start"],
      "persistent": true,
      "cache": false
    },
    "format": {},
    "lint": {}
  }
}

{
	"$schema": "https://turborepo.com/schema.json",

	"tasks": {
		"build": {
			"dependsOn": ["^build"]
		},
		"check": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false,
			"dependsOn": ["^start"],
			"persistent": true
		},
		"type-check": {
			"dependsOn": ["^type-check"]
		}
	}
}
